<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutItemVerysmallQuality"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textTextItemVerysmall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorLightGray">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutItemVerysmall"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textTextItemVerysmall">

        <ImageView android:id="@+id/imgIconItemVerysmallBackground"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="5dp"
            android:background="@color/colorTransparent"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            app:srcCompat="@drawable/icon_road_vertical"
            android:scaleType="centerCrop" />

        <ImageView android:id="@+id/imgIconItemVerysmall"
            android:layout_centerInParent="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorTransparent"
            app:srcCompat="@drawable/icon_departure"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/relativeLayoutItemVerysmall"
        android:layout_toEndOf="@id/relativeLayoutItemVerysmall"
        android:layout_toLeftOf="@id/relativeLayoutItemVerysmallQuality"
        android:layout_toStartOf="@id/relativeLayoutItemVerysmallQuality"
        android:paddingTop="8dp"
        android:id="@+id/textTextItemVerysmall"
        android:textColor="@color/colorError"
        android:paddingBottom="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>