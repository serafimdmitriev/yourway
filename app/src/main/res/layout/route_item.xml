<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutItemQuality"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textBlockItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorLightGray">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutItem"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textBlockItem">

        <ImageView android:id="@+id/imgIconItemBackground"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="5dp"
            android:background="@color/colorTransparent"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            app:srcCompat="@drawable/icon_road_vertical"
            android:scaleType="fitXY" />

        <ImageView android:id="@+id/imgIconItem"
            android:layout_centerInParent="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorTransparent"
            app:srcCompat="@drawable/icon_departure"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBlockItem"
        android:layout_toRightOf="@id/relativeLayoutItem"
        android:layout_toEndOf="@id/relativeLayoutItem"
        android:layout_toLeftOf="@id/relativeLayoutItemQuality"
        android:layout_toStartOf="@id/relativeLayoutItemQuality"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Title Of Point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTitleItem"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorLightBlack"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/textTitleItem"
                android:layout_toEndOf="@id/textTitleItem"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/textTitleItem"
                android:layout_margin="13dp"
                android:id="@+id/relativeLayoutLineItem"
                android:background="@color/colorLightGray">

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTextItem"
            android:textColor="@color/colorLightBlack"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/additionTextItem"
            android:textColor="@color/colorGray"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>